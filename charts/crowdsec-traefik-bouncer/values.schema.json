{
    "title": "Chart Values",
    "type": "object",
    "properties": {
        "bouncer": {
            "type": "object",
            "properties": {
                "crowdsec_bouncer_api_key": {
                    "type": "string",
                    "description": "Bouncer API key (must be generated from CrowdSec agent)",
                    "default": "\"\""
                },
                "crowdsec_agent_host": {
                    "type": "string",
                    "description": "CrowdSec LAPI host (e.g. crowdsec-service.crowdsec.svc.cluster.local:8080)",
                    "default": "\"\""
                },
                "crowdsec_bouncer_gin_mode": {
                    "type": "string",
                    "description": "Gin mode for the bouncer app (debug, release, test)",
                    "default": "\"\""
                },
                "env": {
                    "type": "array",
                    "description": "Additional environment variables for the bouncer container",
                    "default": "[]",
                    "items": {
                        "type": "string"
                    }
                }
            }
        },
        "replicaCount": {
            "type": "number",
            "description": "Number of replicas for the bouncer Deployment",
            "default": 1
        },
        "image": {
            "type": "object",
            "properties": {
                "repository": {
                    "type": "string",
                    "description": "Container image repository",
                    "default": "\"\""
                },
                "pullPolicy": {
                    "type": "string",
                    "description": "Image pull policy (Always, IfNotPresent, Never)",
                    "default": "\"\""
                },
                "tag": {
                    "type": "string",
                    "description": "Image tag (defaults to chart appVersion if empty)",
                    "default": "\"\""
                }
            }
        },
        "imagePullSecrets": {
            "type": "array",
            "description": "Image pull secrets (list of objects with `name` field)",
            "default": "[]",
            "items": {
                "type": "string"
            }
        },
        "service": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "description": "Kubernetes Service type",
                    "default": "\"\""
                },
                "port": {
                    "type": "number",
                    "description": "Service port for the bouncer",
                    "default": 80
                }
            }
        },
        "tolerations": {
            "type": "array",
            "description": "Tolerations for scheduling pods",
            "default": "[]",
            "items": {
                "type": "string"
            }
        },
        "priorityClassName": {
            "type": "string",
            "description": "PriorityClass name for pods",
            "default": "\"\""
        }
    }
}